# Copy this file to .env.deploy and fill in your values

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Whisper Server Password
WHISPER_PASSWORD="your-whisper-password-here"

# Deployment Configuration
WHISPER_REGION=us-central1
WHISPER_SERVICE_NAME=voicenotes-whisper

# Resource Configuration
WHISPER_MEMORY=16Gi
WHISPER_CPU=4
WHISPER_CONCURRENCY=2
WHISPER_TIMEOUT=3600
WHISPER_MAX_INSTANCES=1

# Whisper Server Configuration
WHISPER_HOST=0.0.0.0
WHISPER_PORT=8000
WHISPER_MODEL_NAME="large-v2"       # tiny, base, small, medium, large-v2, large-v3
WHISPER_DEVICE="cuda"               # cpu or cuda
WHISPER_COMPUTE_TYPE="int8"         # int8, float16, float32
WHISPER_SHUTDOWN_TIMEOUT=60
