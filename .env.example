# Copy this file to .env and fill in your values

BASE_URL="http://localhost:3000"
AUTH_SECRET="your-secret-key-here-make-it-long-and-random"
DATABASE_URL="file:./data.sqlite"

# OpenAI Configuration (not used for now)
OPENAI_API_KEY="your-openai-api-key-here"

# Whisper Server Configuration
# https://github.com/SYSTRAN/faster-whisper
WHISPER_SERVER_URL="http://localhost:5000"
WHISPER_PASSWORD="your-whisper-password-here"

WHISPER_USE_UPLOAD=true
WHISPER_HOST=0.0.0.0
WHISPER_PORT=5000
WHISPER_MODEL_NAME="large-v2"       # tiny, base, small, medium, large-v2, large-v3
WHISPER_DEVICE="cpu"                # cpu or cuda
WHISPER_COMPUTE_TYPE="int8"         # int8, float16, float32
WHISPER_SHUTDOWN_TIMEOUT=-1

